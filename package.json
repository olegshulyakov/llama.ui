{
  "name": "llama.ui",
  "private": true,
  "version": "2.12.2",
  "type": "module",
  "scripts": {
    "prestart": "npm run format",
    "start": "VITE_APP_NAME=$npm_package_name vite",
    "build": "npm run format && tsc -b && VITE_APP_NAME=$npm_package_name vite build",
    "build:prod": "tsc -b && VITE_APP_NAME=$npm_package_name vite build",
    "format": "eslint . && prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "npm run build && vite preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@sec-ant/readable-stream": "^0.6.0",
    "dexie": "^4.0.11",
    "highlight.js": "^11.10.0",
    "katex": "^0.16.15",
    "pdfjs-dist": "^5.2.133",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^9.0.3",
    "react-router": "^7.1.5",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "textlinestream": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^5.0.12",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "sass-embedded": "^1.83.4",
    "tailwindcss": "^4.1.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^7.1.2",
    "vite-plugin-package-version": "^1.1.0",
    "vite-plugin-pwa": "^1.0.2",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSameLine": false
  }
}
